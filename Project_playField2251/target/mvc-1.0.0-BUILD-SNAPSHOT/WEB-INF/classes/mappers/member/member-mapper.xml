<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.kh.mvc.member.mapper.MemberMapper">
 	<sql id="selectMemberSql">
 		SELECT ID,
 			   PWD,
 			   NAME,
 			   NICK,
 			   PHONE,
 			   MAIL,
 			   AGE,
 			   HEIGHT,
 			   WIDTH,
 			   POSITION,
 			   ATHLETE,
 			   LEVELS,
 			   POINT,
 			   ROLE,
 			   STATUS
 		FROM MEMBER
 	</sql>
 	
 	<resultMap type="Member" id="memberResultMap">
 		<id property="id" column="ID"/>
 		<id property="pwd" column="PWD"/>
 		<id property="name" column="NAME"/>
 		<id property="nick" column="NICK"/>
 		<id property="phone" column="PHONE"/>
 		<id property="mail" column="MAIL"/>
 		<id property="age" column="AGE"/>
 		<id property="height" column="HEIGHT"/>
 		<id property="width" column="WIDTH"/>
 		<id property="position" column="POSITION"/>
 		<id property="athlete" column="ATHLETE"/>
 		<id property="levels" column="LEVELS"/>
 		<id property="point" column="POINT"/>
 		<id property="role" column="ROLE"/>
 		<id property="status" column="STATUS"/>
 	</resultMap>
 	
 	<!-- 유저 수 조회 쿼리문 -->
 	<select id="selectCount" resultType="_int">
 		SELECT COUNT(*) FROM MEMBER
 	</select>
 	
 	<!-- 전체 조회 쿼리문 -->
 	<select id="selectAll" resultMap="memberResultMap">
 		<include refid="selectMemberSql"/> <!-- 위 sql 태그 코드부를 그대로 사용하는 코드 -->
 	</select>
 	
 	<select id="selectMember" parameterType="string" resultMap="memberResultMap">
 		<include refid="selectMemberSql"/>
 		WHERE ID = #{id} AND STATUS = 'Y'
 	</select>
 	
 	<!-- 추가 입력 쿼리문 -->
 	<insert id="insertMember" parameterType="Member" useGeneratedKeys="true" keyColumn="ID" keyProperty="id">
 		INSERT INTO MEMBER (
 			ID,
 			PWD,
 			NAME,
 			NICK,
 			PHONE,
 			MAIL,
 			AGE,
 			HEIGHT,
 			WIDTH,
 			POSITION,
 			ATHLETE,
 			LEVELS,
 			POINT,
 			ROLE,
 			STATUS
 		) VALUES(
 			#{id},
 			#{password},
 			#{nick},
 			#{phone},
 			#{mail},
 			#{age},
 			#{height},
 			#{width},
 			#{position},
 			#{athlete},
 			#{levels},
 			DEFAULT,
 			DEFAULT,
 			DEFAULT
 		)
 	</insert>
 	
 	<!-- 정보 수정 쿼리문 -->
 	<update id="updateMember" parameterType="Member">
 		UPDATE MEMBER SET
 			NAME = #{name},
 			NICK = #{nick},
 			PHONE = #{phone},
 			EMAIL = #{email},
 			POSITION = #{position},
 			HEIGHT = #{height},
 			WIDTH = #{width}
 		WHERE ID = #{id}
 	</update>
 	
 	<update id="updatePwd" parameterType="map">
 		UPDATE MEMBER SET PWD=#{newPwd} WHERE ID=#{id}
 	</update>
 	
 	<!-- 삭제 쿼리문(상태 변환) -->
 	<update id="deleteMember" parameterType="_int">
 		UPDATE MEMBER SET
 			STATUS = 'N'
 		WHERE
 			ID = #{id}
 	</update>
 	
 </mapper>
